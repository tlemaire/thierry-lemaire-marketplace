# SDD Commands System Environment Configuration
# Copy this file to .env and update with your specific configuration

# Commands System Configuration
SDD_COMMANDS_VERSION=2.0.0
SDD_COMMANDS_NAME=SDD Commands System
SDD_COMMANDS_DESCRIPTION=Comprehensive slash command interface for Spec-Driven Development workflow

# Command Processing Configuration
COMMAND_TIMEOUT=30
MAX_COMMAND_LENGTH=10000
COMMAND_HISTORY_SIZE=100
COMMAND_VALIDATION_STRICT=true
CONTEXT_RETENTION_TIME=3600

# Template System Configuration
TEMPLATE_CACHE_SIZE=200
TEMPLATE_VALIDATION_ENABLED=true
TEMPLATE_AUTO_UPDATE=false
TEMPLATE_CUSTOMIZATION_ALLOWED=true
TEMPLATE_PERFORMANCE_MONITORING=true

# Natural Language Processing Configuration
NLP_PROCESSING_ENABLED=true
NLP_CONFIDENCE_THRESHOLD=0.8
NLP_MAX_INPUT_LENGTH=5000
NLP_BATCH_PROCESSING=false
NLP_QUALITY_VALIDATION=true

# File Management Configuration
FILE_OPERATIONS_TIMEOUT=10
MAX_FILE_SIZE=10000000
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
FILE_VALIDATION_STRICT=true

# Quality Assurance Configuration
QUALITY_VALIDATION_ENABLED=true
QUALITY_SCORING_ALGORITHM=advanced
QUALITY_THRESHOLD_WARNING=70
QUALITY_THRESHOLD_ERROR=50
QUALITY_IMPROVEMENT_RECOMMENDATIONS=true

# Performance Configuration
RESPONSE_TIME_TARGET=5
MEMORY_USAGE_LIMIT=50
PARALLEL_PROCESSING_ENABLED=true
PERFORMANCE_MONITORING_ENABLED=true
PERFORMANCE_LOGGING_LEVEL=info

# Security Configuration
INPUT_VALIDATION_ENABLED=true
PATH_VALIDATION_STRICT=true
CONTENT_SANITIZATION_ENABLED=true
SECURITY_AUDIT_LOGGING=true
ENCRYPTION_ENABLED=false

# Development Environment
NODE_ENV=development
DEBUG_MODE=false
LOG_LEVEL=info
ERROR_REPORTING_ENABLED=true
TELEMETRY_ENABLED=false

# User Experience Configuration
PROGRESSIVE_DISCLOSURE_ENABLED=true
CONTEXT_SENSITIVE_HELP=true
SKILL_LEVEL_DETECTION=true
PERSONALIZATION_ENABLED=true
LEARNING_PATHS_ENABLED=true

# Integration Configuration
CLAUDE_CODE_INTEGRATION=true
GIT_INTEGRATION=true
VERSION_CONTROL_INTEGRATION=true
EXTERNAL_TOOL_INTEGRATION=false
API_INTEGRATION_ENABLED=false

# Testing Configuration
TEST_MODE_ENABLED=false
MOCK_FILE_SYSTEM=false
INTEGRATION_TESTING=true
PERFORMANCE_TESTING=true
USER_ACCEPTANCE_TESTING=true

# Caching Configuration
COMMAND_RESULT_CACHE_ENABLED=true
TEMPLATE_CACHE_ENABLED=true
CONTEXT_CACHE_ENABLED=true
FILE_METADATA_CACHE=true
CACHE_EXPIRY_TIME=1800

# Monitoring and Analytics
USAGE_ANALYTICS_ENABLED=false
PERFORMANCE_METRICS_ENABLED=true
ERROR_TRACKING_ENABLED=true
QUALITY_METRICS_ENABLED=true
USER_FEEDBACK_ENABLED=true

# Feature Flags
ADVANCED_TEMPLATES=false
CUSTOM_WORKFLOWS=false
COLLABORATION_FEATURES=false
ENTERPRISE_FEATURES=false
EXPERIMENTAL_FEATURES=false

# Localization Configuration
DEFAULT_LOCALE=en-US
SUPPORTED_LOCALES=en-US,en-GB,es-ES,fr-FR,de-DE
LOCALIZATION_ENABLED=false
TRANSLATION_CACHE=false

# Compatibility Configuration
CLAUDE_CODE_MIN_VERSION=2.0.37
BACKWARD_COMPATIBILITY=true
MIGRATION_MODE=automatic
LEGACY_SUPPORT=false

# Resource Limits
MAX_CONCURRENT_COMMANDS=5
MAX_TEMPLATE_COMPLEXITY=100
MAX_SPECIFICATION_SIZE=50000
MAX_PROJECT_SIZE=1000
MAX_MEMORY_USAGE=100

# Quality Gates
VALIDATION_REQUIRED=true
QUALITY_GATE_ENABLED=true
AUTO_CORRECTION_ENABLED=false
SUGGESTION_ENABLED=true
IMPROVEMENT_TRACKING=true

# Backup and Recovery
AUTO_BACKUP_ENABLED=true
BACKUP_COMPRESSION=true
BACKUP_ENCRYPTION=false
RECOVERY_MODE=automatic
BACKUP_VALIDATION=true