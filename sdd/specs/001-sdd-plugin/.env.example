# SDD Plugin Environment Configuration
# Copy this file to .env and update with your specific configuration

# Plugin Configuration
SDD_VERSION=1.0.0
SDD_PLUGIN_NAME=Spec-Driven Development
SDD_DESCRIPTION=Transform ideas into structured specifications and executable code through systematic workflow

# Claude Code Integration
CLAUDE_CODE_VERSION_MIN=2.0.37
CLAUDE_CODE_VERSION_CURRENT=2.0.37
CLAUDE_CODE_PLATFORM=web
CLAUDE_CODE_ENVIRONMENT=production

# Development Environment
NODE_ENV=development
DEBUG_MODE=true
LOG_LEVEL=info
ENABLE_PERFORMANCE_MONITORING=false

# Default Template Preferences
DEFAULT_CONSTITUTION_TEMPLATE=simple
DEFAULT_SPECIFICATION_TEMPLATE=detailed
DEFAULT_PLAN_TEMPLATE=comprehensive
DEFAULT_TASK_TEMPLATE=25-tasks
DEFAULT_CHECKLIST_TEMPLATE=comprehensive

# User Experience Settings
DEFAULT_COMPLEXITY_LEVEL=intermediate
DEFAULT_LANGUAGE=en
DEFAULT_TIMEZONE=UTC
AUTO_SAVE_ENABLED=true
AUTO_BACKUP_ENABLED=true

# Template Styling
TEMPLATE_STYLE=detailed
INCLUDE_EXAMPLES=true
INCLUDE_BEST_PRACTICES=true
INCLUDE_ALTERNATIVES=true

# File System Configuration
PROJECT_ROOT=.
SPECIFICATIONS_DIRECTORY=specs
MEMORY_DIRECTORY=.specify/memory
SAMPLES_DIRECTORY=samples
TEMPLATES_DIRECTORY=templates

# Git Integration
GIT_AUTO_BRANCH=true
GIT_AUTO_COMMIT=false
GIT_BRANCH_PREFIX=sdd/
GIT_COMMIT_MESSAGE_PREFIX="SDD: "

# File Generation
DEFAULT_ENCODING=utf8
LINE_ENDING=lf
FILE_PERMISSIONS=644
DIRECTORY_PERMISSIONS=755

# Quality Assurance
ENABLE_VALIDATION=true
ENABLE_CHECKLISTS=true
ENABLE_ANALYSIS=true
DEFAULT_QUALITY_THRESHOLD=80

# Performance Settings
MAX_CONTENT_LENGTH=1000000
TEMPLATE_CACHE_SIZE=100
CONTEXT_OPTIMIZATION=true
PARALLEL_PROCESSING=false

# Security Settings
ENABLE_FILE_VALIDATION=true
ENABLE_PATH_VALIDATION=true
ENABLE_CONTENT_SANITIZATION=true
ALLOW_CUSTOM_TEMPLATES=false

# Backup and Recovery
BACKUP_ENABLED=false
BACKUP_DIRECTORY=~/.sdd-backup
BACKUP_INTERVAL=24
BACKUP_RETENTION_DAYS=30

# Plugin Updates
AUTO_UPDATE_CHECK=true
UPDATE_CHANNEL=stable
UPDATE_NOTIFICATIONS=true

# Logging Configuration
LOG_FORMAT=json
LOG_LEVEL_ENV=LOG_LEVEL
LOG_FILE_ENABLED=false
LOG_FILE_PATH=~/.sdd/logs/sdd.log
LOG_FILE_MAX_SIZE=10m

# Metrics and Analytics
ENABLE_METRICS=false
METRICS_ENDPOINT=
METRICS_TOKEN=
USAGE_TRACKING=false

# Experimental Features
ENABLE_EXPERIMENTAL_FEATURES=false
ENABLE_AI_OPTIMIZATIONS=false
ENABLE_ADVANCED_TEMPLATES=false

# Development Settings
ENABLE_DEVELOPER_MODE=false
ENABLE_TEMPLATE_DEBUGGING=false
ENABLE_PERFORMANCE_PROFILING=false
SHOW_GENERATION_TIMING=false
SHOW_TEMPLATE_RENDERING=false

# User Preferences
USER_PREFS_AUTO_SAVE=true
USER_PREFS_SYNC=false
USER_PREFS_ENCRYPTION=false

# Integration Settings
ENABLE_CLAUDE_CODE_INTEGRATION=true
ENABLE_GIT_INTEGRATION=true
ENABLE_FILE_SYSTEM_INTEGRATION=true
ENABLE_CONTEXT_MANAGEMENT=true

# Template Repository
CUSTOM_TEMPLATES_REPO=
CUSTOM_TEMPLATES_BRANCH=main
CUSTOM_TEMPLATES_ENABLED=false
TEMPLATE_CACHE_DURATION=3600

# Security and Privacy
PRIVACY_MODE=full
DATA_COLLECTION=none
TELEMETRY=disabled
ANONYMOUS_USAGE=false

# Feature Flags
FEATURE_ADVANCED_TEMPLATES=false
FEATURE_CUSTOM_CHECKLISTS=false
FEATURE_REAL_TIME_COLLABORATION=false
FEATURE_INTEGRATION_PARTNERS=false
FEATURE_PLUGIN_MARKETPLACE=true

# Testing Configuration
ENABLE_TESTING=false
TEST_MODE=simulation
TEST_DATA_DIRECTORY=./test-data
MOCK_FILE_SYSTEM=true

# Resource Limits
MAX_TEMPLATE_SIZE=1MB
MAX_SPECIFICATION_SIZE=5MB
MAX_PLAN_SIZE=3MB
MAX_TASK_LIST_SIZE=1MB
MAX_CHECKLIST_SIZE=500KB

# Compatibility Settings
COMPATIBILITY_MODE=standard
LEGACY_SUPPORT=false
MIGRATION_MODE=automatic

# Localization
DEFAULT_LOCALE=en-US
SUPPORTED_LOCALES=en-US,en-GB,es-ES,fr-FR,de-DE,ja-JP,zh-CN
ENABLE_LOCALIZATION=false

# Error Handling
GRACEFUL_ERROR_HANDLING=true
ERROR_REPORTING=true
ERROR_LOG_PATH=~/.sdd/logs/errors.log
MAX_ERROR_RETRY_ATTEMPTS=3

# Performance Optimization
ENABLE_CACHING=true
CACHE_DURATION=3600
MINIMIZE_MEMORY_USAGE=true
OPTIMIZE_FILE_OPERATIONS=true

# Deprecated Settings (for backward compatibility)
# LEGACY_MODE=false
# OLD_FORMAT_SUPPORT=false
# MIGRATION_FROM_VERSION=1.0.0