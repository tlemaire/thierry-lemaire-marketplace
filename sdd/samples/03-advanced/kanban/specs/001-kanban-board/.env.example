# Environment Configuration Template
# Copy this file to .env and update with your actual values

# Application Configuration
NODE_ENV=development
PORT=3001
APP_NAME=Kanban Board
APP_VERSION=1.0.0

# Frontend Configuration
REACT_APP_API_URL=http://localhost:3001/api
REACT_APP_SOCKET_URL=http://localhost:3001
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_DEBUG=true

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/kanban_board
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=kanban_board
DATABASE_USER=username
DATABASE_PASSWORD=password
DATABASE_SSL=false

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Authentication Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-refresh-secret-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# Session Configuration
SESSION_SECRET=your-session-secret-key-change-this-in-production
SESSION_TIMEOUT=24h

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# File Upload Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx
THUMBNAIL_SIZE=300x300

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@kanbanboard.com
EMAIL_FROM_NAME=Kanban Board

# Analytics and Monitoring
GOOGLE_ANALYTICS_ID=
SENTRY_DSN=
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# Security Configuration
CSP_ENABLED=false
HELMET_ENABLED=true
ENABLE_COMPRESSION=true
ENABLE_TRUST_PROXY=false

# Socket.IO Configuration
SOCKET_CORS_ORIGIN=http://localhost:3000
SOCKET_PING_TIMEOUT=60000
SOCKET_PING_INTERVAL=25000

# Database Pool Configuration
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_ACQUIRE_TIMEOUT=60000
DB_POOL_IDLE_TIMEOUTMillis=30000

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_KEYS=1000
ENABLE_QUERY_CACHE=true

# Development Settings
ENABLE_SWAGGER=true
ENABLE_GRAPHQL_PLAYGROUND=true
ENABLE_SEED_DATA=true
AUTO_MIGRATE=true

# Production Settings
ENABLE_CLUSTER=true
CLUSTER_WORKERS=0
GRACEFUL_SHUTDOWN_TIMEOUT=5000

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=false
ENABLE_PASSWORD_RESET=true
ENABLE_INVITATIONS=true
ENABLE_WEBHOOKS=false
ENABLE_INTEGRATIONS=false
ENABLE_API_KEYS=true

# Webhook Configuration (If enabled)
WEBHOOK_SECRET=your-webhook-secret
WEBHOOK_TIMEOUT=30000
WEBHOOK_RETRY_ATTEMPTS=3

# Integration Configuration
SLACK_CLIENT_ID=
SLACK_CLIENT_SECRET=
SLACK_SIGNING_SECRET=

# GitHub Integration (If enabled)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_WEBHOOK_SECRET=

# Performance Settings
ENABLE_COMPRESSION_GZIP=true
COMPRESSION_LEVEL=6
COMPRESSION_THRESHOLD=1024

# Logging Configuration
LOG_FILE_ENABLED=true
LOG_FILE_PATH=logs/app.log
LOG_FILE_MAX_SIZE=10m
LOG_FILE_MAX_FILES=5
LOG_TO_CONSOLE=true

# Monitoring and Health
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_ENDPOINT=/health
METRICS_ENABLED=false
METRICS_ENDPOINT=/metrics

# Development Tools
ENABLE_CORS_LOGGING=true
ENABLE_DEBUG_MIDDLEWARE=true
ENABLE_PROFILER=false

# Testing Configuration
TEST_DATABASE_URL=postgresql://username:password@localhost:5432/kanban_board_test
TEST_REDIS_URL=redis://localhost:6379/1
MOCK_EXTERNAL_SERVICES=true

# Docker Configuration
DOCKER_HOST=localhost
DOCKER_PORT=2375
DOCKER_REGISTRY=
DOCKER_IMAGE_TAG=latest

# Backup Configuration
ENABLE_AUTO_BACKUP=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=
BACKUP_S3_REGION=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Content Delivery Network
CDN_ENABLED=false
CDN_URL=https://cdn.yourdomain.com
CDN_CACHE_TTL=31536000

# Internationalization
DEFAULT_LOCALE=en
SUPPORTED_LOCALES=en,es,fr,de,ja,zh
ENABLE_I18N=false

# Notification Settings
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_PUSH_NOTIFICATIONS=false
ENABLE_SMS_NOTIFICATIONS=false
NOTIFICATION_BATCH_SIZE=50

# Task Queue Configuration
TASK_QUEUE_ENABLED=false
TASK_QUEUE_REDIS_URL=redis://localhost:6379/2
TASK_QUEUE_CONCURRENCY=5
TASK_QUEUE_MAX_ATTEMPTS=3

# API Configuration
API_VERSION=v1
API_PREFIX=/api
ENABLE_API_VERSIONING=true
ENABLE_API_DOCUMENTATION=true

# Security Headers
HELMET_CONTENT_SECURITY_POLICY=false
HELMET_HSTS_MAX_AGE=31536000
HELMET_FRAME_OPTIONS=DENY
HELMET_NO_SNIFF=true

# Data Retention
ACTIVITY_RETENTION_DAYS=90
SESSION_RETENTION_DAYS=30
LOG_RETENTION_DAYS=30
UPLOAD_RETENTION_DAYS=365

# Performance Budgets
FRONTEND_BUNDLE_SIZE_MAX=250000
API_RESPONSE_TIME_MAX=2000
DATABASE_QUERY_TIME_MAX=1000

# External Services
EXTERNAL_API_TIMEOUT=30000
EXTERNAL_API_RETRIES=3
EXTERNAL_API_RETRY_DELAY=1000

# Enterprise Features
ENABLE_SSO=false
ENABLE_LDAP=false
LDAP_URL=
LDAP_BIND_DN=
LDAP_BIND_CREDENTIALS=
LDAP_SEARCH_BASE=
LDAP_SEARCH_FILTER=

# Compliance Settings
ENABLE_AUDIT_LOG=false
ENABLE_DATA_EXPORT=false
ENABLE_DATA_DELETION=false
GDPR_COMPLIANCE=false

# Development Overrides
SKIP_AUTH=false
SKIP_RATE_LIMIT=false
MOCK_AUTH=false
MOCK_EMAIL=true
DEMO_MODE=false

# Experimental Features
ENABLE_REAL_TIME_COLLABORATION=true
ENABLE_OFFLINE_MODE=false
ENABLE_PWA=false
ENABLE_DARK_MODE=true

# Client-Side Configuration
REACT_APP_BUILD_ID=
REACT_APP_PUBLIC_URL=
REACT_APP_ASSET_MANIFEST=true
REACT_APP_BROWSE_TO_SMILE=true
REACT_APP_FAST_REFRESH=true
REACT_APP_ESLINT=false

# Build Configuration
GENERATE_SOURCEMAP=false
INLINE_RUNTIME_CHUNK=false
IMAGE_INLINE_SIZE_LIMIT=10000

# Deployment Settings
DEPLOY_ENVIRONMENT=development
DEPLOY_REGION=
DEPLOY_ZONE=
NAMESPACE=default

# CI/CD Integration
CI=false
TIER=production
PUBLIC_URL=http://localhost:3000

# Legacy Support
LEGACY_MODE=false
ENABLE_V1_API_COMPATIBILITY=false