# Environment Configuration
# This file is included for SDD methodology compliance
# Note: This static project doesn't use environment variables,
# but the template demonstrates SDD structure consistency

NODE_ENV=development

# Static Site Configuration
SITE_URL=http://localhost:8000
SITE_TITLE=Hello World Landing Page
SITE_DESCRIPTION=A simple, fast-loading landing page demonstrating professional web development

# Analytics (Optional - for production deployment)
GOOGLE_ANALYTICS_ID=
HOTJAR_ID=

# Deployment Settings
DEPLOY_PLATFORM=local
DEPLOY_URL=http://localhost:8000

# Development Settings
LIVE_RELOAD=true
DEV_PORT=8000

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=false
SENTRY_DSN=

# Feature Flags
ENABLE_ANALYTICS=false
ENABLE_ERROR_TRACKING=false
ENABLE_PERFORMANCE_TRACKING=false

# Build Settings (for future enhancements)
MINIFY_HTML=true
MINIFY_CSS=true
MINIFY_JS=true
GENERATE_SOURCEMAPS=false