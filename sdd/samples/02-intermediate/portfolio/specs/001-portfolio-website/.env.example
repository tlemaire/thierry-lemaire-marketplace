# Environment Configuration
# Jekyll Static Site Configuration

NODE_ENV=development
JEKYLL_ENV=development

# Site Configuration
SITE_URL=http://localhost:4000
SITE_BASEURL=/portfolio
SITE_TITLE=Your Name - Portfolio
SITE_DESCRIPTION=Professional portfolio showcasing web development projects and skills
SITE_AUTHOR=Your Name
SITE_EMAIL=your.email@example.com

# Social Media Links
GITHUB_USERNAME=yourusername
LINKEDIN_URL=https://linkedin.com/in/yourprofile
TWITTER_HANDLE=@yourhandle

# Analytics and Tracking
GOOGLE_ANALYTICS_ID=
GOOGLE_TAG_MANAGER_ID=
HOTJAR_ID=
FACEBOOK_PIXEL_ID=

# Deployment Settings
DEPLOY_PLATFORM=github-pages
DEPLOY_URL=https://yourname.github.io/portfolio
CUSTOM_DOMAIN=

# Contact Form Configuration
CONTACT_FORM_SERVICE=netlify
CONTACT_FORM_ENDPOINT=
EMAIL_SERVICE=sendgrid
EMAIL_API_KEY=

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=false
SENTRY_DSN=
SPEEDCURVE_ID=

# SEO Settings
ENABLE_ROBOTS_TXT=true
ENABLE_SITEMAP=true
ENABLE_FEED=true
META_DESCRIPTION_MAX_LENGTH=160

# Image Optimization
IMAGE_OPTIMIZATION=true
LAZY_LOADING=true
WEBP_SUPPORT=true
IMAGE_QUALITY=85

# Development Settings
LIVERELOAD=true
INCREMENTAL_BUILD=true
PROFILE=false
VERBOSE=false

# Security Settings
ENABLE_CSP=false
ALLOWED_HOSTS=localhost:4000,127.0.0.1:4000
API_RATE_LIMIT=100

# Feature Flags
ENABLE_BLOG=true
ENABLE_COMMENTS=false
ENABLE_NEWSLETTER=false
ENABLE_DARK_MODE=false

# Build Settings
MINIFY_HTML=true
MINIFY_CSS=true
MINIFY_JS=true
GENERATE_SOURCEMAPS=false
COMPRESS_ASSETS=true

# External Services
FONTAWESOME_KIT=
GOOGLE_FONTS_API_KEY=
UNSPLASH_ACCESS_KEY=

# Cache Settings
CACHE_DURATION=3600
STATIC_CACHE_DURATION=86400
ENABLE_BROWSER_CACHE=true

# Internationalization
DEFAULT_LOCALE=en
SUPPORTED_LOCALES=en,es,fr
ENABLE_I18N=false

# Advanced Settings
PAGINATION_SIZE=10
EXCLUDE_FROM_SITEMAP=404.html
TIMEZONE=UTC
FUTURE=true
UNPUBLISHED=false

# Development Tools
ENABLE_LIVERELOAD=true
SYNC_DEBOUNCE=50
MAX_THREAD_COUNT=4

# Testing and Quality Assurance
ENABLE_HTML_PROOF=true
ACCESSIBILITY_TESTING=true
PERFORMANCE_BUDGET=500

# Maintenance
AUTO_UPDATE_DEPENDENCIES=false
BACKUP_SCHEDULE=daily
MONITOR_UPTIME=true

# Legal and Compliance
PRIVACY_POLICY_URL=/privacy/
TERMS_OF_SERVICE_URL=/terms/
COOKIE_CONSENT_ENABLED=false
GDPR_COMPLIANCE=true